@import url('https://fonts.googleapis.com/css?family=Open+Sans');

*
  box-sizing: border-box;

html, body
  min-height: 100vh;
  width 100%
  margin: 0;
  padding: 0;
  background-color #6A1B9A
  font-family: 'Open Sans', sans-serif;

p
  margin 0
  bottom 0

.wrapper
  width 100%
  height 100%
  display flex
  +below(1200px)
    flex-direction: column;

#map
  height: 100vh;
  width: 50vw;
  +below(1200px)
    height: 50vh
    width 100vw

.info
  height: 100vh;
  width: 50vw;
  display: flex;
  flex-direction: column
  align-items: center;
  justify-content center;
  padding 2rem
  background-color: #6A1B9A
  +below(1200px)
    height: 50vh
    width 100vw
    padding 1rem
    padding-top 2rem
  +below(800px)
    padding-top 1rem

.title, .location, .summary, .temperature, .pressure, .windSpeed
  padding-top 1rem
  color white
  text-align: center;
  font-size responsive 1rem 1.75rem
  font-range: 420px 1200px;
  +below(1200px)
    padding-top 1rem
    max-width: 50%

.title
  padding-bottom 1rem
  font-weight: bold
  +below(800px)
    padding-top 0

.icon
  padding 0
  padding-top: 10px;
  height 150px
  +below(1200px)
    padding-top 5px
    height 100px
  +below(800px)
    display: none;

.icon > img
  +below(1200px)
    height 100px
    width 100px

.summary
  padding 0
  +below(1200px)
    padding-top 1rem

.mapContainer
  position relative

.redraw
  width: 60px;
  height: 60px;
  color #6A1B9A
  border 5px solid #6A1B9A
  border-radius: 30px;
  background-color 	rgba(255,255,255,0.8)
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3
  font-size 1rem
  animation-iteration-count: 1;
  animation-duration: 1s
  animation-timing-function: linear;
  position: absolute;
  top: 50px;
  right: 50px;
  z-index: 99;
  +below(800px)
    top 20px
    right 20px

.iconCont
  animation-name: rotator
  animation-iteration-count: 1000;

@keyframes rotator {
    0%   {transform: rotate(0deg)}
    25%  {transform: rotate(90deg)}
    50%  {transform: rotate(180deg)}
    75%  {transform: rotate(270deg)}
    100% {transform: rotate(360deg)}
}
